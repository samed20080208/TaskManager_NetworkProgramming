<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="820">
    
    <Grid>

        <ListBox x:Name="ListBox" Height="400" Width="500" HorizontalAlignment="Left" Margin="20 0" ></ListBox>

        <StackPanel Height="400" Width="250" HorizontalAlignment="Right" Margin="20 0" >

            <Button x:Name="BtnRefersh" FontWeight="Bold" Height="40" Background="DarkCyan" FontSize="20" Margin="0 10" Click="BtnRefersh_Click" >Refresh</Button>

            <TextBox x:Name="txtBox" Height="30" FontSize="18" Margin="0 30" ></TextBox>
            <ComboBox x:Name="Combobox" Height="30" FontSize="18" Margin="0 -20 0 0" ></ComboBox>
            <Button Height="40" FontSize="20" FontWeight="Bold" Background="DarkCyan" Margin="0 20" Click="Button_Click" >Run</Button>

        </StackPanel>

    </Grid>
</Window>
